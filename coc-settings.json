{
    "coc.preferences.formatOnSaveFiletypes": ["typescript", "typescriptreact", "javascript", "javascriptreact", "haskell"],
    "javascript.suggestionActions.enabled": false,
    "eslint.filetypes": ["typescript", "typescriptreact", "javascript", "javascriptreact"],
    "suggest.enablePreview": true,
    "languageserver": {
    "haskell": {
      "command": "haskell-language-server-wrapper",
      "args": ["--lsp"],
      "rootPatterns": ["*.cabal", "stack.yaml", "cabal.project", "package.yaml", "hie.yaml"],
      "filetypes": ["haskell", "lhaskell"]
    }
  },
  "codeLens.enable": true,
  "java.referencesCodeLens.enabled": true,
  "java.jdt.ls.vmargs": "javaagent:/usr/local/share/lombok/lombok.jar"
}
